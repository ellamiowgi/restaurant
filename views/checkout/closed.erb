<h1>Check Clothesed !</h1>

<h3>Party ID:</h3>
<p><%= @receipt.party_id %></p>
<table style="margin: 0 auto">
	<tr>
		<th width="45%">Food Ordered</th>
		<th width="45%">Price</th>
	</tr>
		<% @receipt.foods.map do |food| %>
	<tr>
		<td><%= food.name %></td>
		<td>&pound;<%= food.price %></td>
	</tr>
		<% end %>
</table>

<h3>Sub-total:</h3>
<p>&pound;<%= @receipt.sub_total %></p>

<h3>Gratuity:</h3>
<p>&pound;<%= @receipt.gratuity %></p>

<h2>Total:</h2>
<h2>&pound;<%= @receipt.total %></h2>

<a href="/print_closed/<%= @receipt.party_id %>" target="_blank">Printable receipt</a>

